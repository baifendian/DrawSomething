<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration>

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d - %c -%-4r [%t] %-5p %x - %m%n" />
		</layout>
	</appender>



	<appender name="start_log_file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="../logs/start.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d - %c -%-4r [%t] %-5p %x - %m%n" />
		</layout>
	</appender>
	
	<appender name="bai_file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="../logs/bai.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d - %c -%-4r [%t] %-5p %x - %m%n" />
		</layout>
	</appender>

	<logger name="bai" additivity="false">
		<level value="debug" />
		<appender-ref ref="bai_file" />
	</logger>

	
	<root>
		<priority value="debug" />
		<appender-ref ref="start_log_file" />
		<appender-ref ref="console" />
	</root>


</log4j:configuration>  
